---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Layout from "./Layout.astro";
import { translateFor } from "@/i18n/utils";

const t = translateFor(Astro.currentLocale);

const siteTitle = t("site.title");
const pageTitle = t("about");
const title = `${pageTitle.charAt(0).toUpperCase() + pageTitle.slice(1)} | ${siteTitle}`;
---

<Layout title={title}>
  <Header />
  <main id="main-content">
    <section id="about" class="prose mt-8 mb-28 max-w-app prose-img:border-0">
      <slot />
    </section>
  </main>
  <Footer />
</Layout>
